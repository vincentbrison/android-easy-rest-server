<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>post_demo_servlet</servlet-name>
		<servlet-class>com.vb.openlibraries.easyrestclient.demoserver.servlets.PostDemoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>post_demo_servlet</servlet-name>
		<url-pattern>/post/demo</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>get_demo_servlet</servlet-name>
		<servlet-class>com.vb.openlibraries.easyrestclient.demoserver.servlets.GetDemoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>get_demo_servlet</servlet-name>
		<url-pattern>/get/demo</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
